/* pages/personal/personal.wxss */
.container{
   background-color: #87ceeb;
   padding-top: 20rpx;
}

.personal{
  display: flex;
  
 
}
.personal .portrait{
  margin-left: 20rpx;
  height: 120rpx;
  width: 120rpx;
}
.personal .portrait .get-user{
  margin: 0;
  padding: 0;
  height: 120rpx;
  width: 120rpx;
  background-color: #87ceeb;
  border-radius: 100%
}
.personal .portrait .user-img{
  border-radius: 100%;
  height: 120rpx;
  width: 120rpx;
}
.personal .text{
  height: 120rpx;
  display: flex;
  flex-direction: column;
}
.personal .text .nickname{
  font-size: 30rpx;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
}
.personal .text .tallk{
  font-size: 28rpx;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
}
.bottom-bar{
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}
.bottom-bar .collection{
  
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  font-size: 40rpx;

}
.bottom-bar .focus{
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  font-size: 40rpx;
}
.bottom-bar .massage{
  font-size: 30rpx
}

